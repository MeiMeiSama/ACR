function initTrig_YamamotoR()
    gg_trg_YamamotoR = CreateTrigger()
    TriggerRegisterAnyUnitEventBJ(gg_trg_YamamotoR, EVENT_PLAYER_UNIT_SPELL_EFFECT)
    TriggerAddCondition(gg_trg_YamamotoR, Condition(function trig_YamamotoRConditions))
    TriggerAddAction(gg_trg_YamamotoR, function trig_YamamotoRActions)