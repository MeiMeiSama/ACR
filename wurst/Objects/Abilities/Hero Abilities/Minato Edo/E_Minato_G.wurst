package E_Minato_G
import ClosureTimers
init
    edoMinatoG()
function edoMinatoG()
    CreateTrigger()
    ..registerAnyUnitEvent(EVENT_PLAYER_UNIT_SPELL_EFFECT)
    ..addAction() ->
        if GetSpellAbilityId() == 'A0Y1'
            let caster = GetTriggerUnit()
            caster.addAbility('A00L')
            caster.hideAbility('A00L', true)
            doAfter(0.5) -> 
                caster.hideAbility('A00L', false)